{
    "name": "dbellettini/eventstore-client",
    "description": "EventStore client for PHP",
    "type": "library",
    "keywords": [
        "eventsourcing",
        "eventstore"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Davide Bellettini",
            "email": "davide@bellettini.me",
